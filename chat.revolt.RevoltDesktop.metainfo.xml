<component type="desktop">
  <id>chat.revolt.RevoltDesktop</id>
  <provides>
    <id>chat.revolt.RevoltDesktop.desktop</id>
  </provides>
  <launchable type="desktop-id">chat.revolt.RevoltDesktop.desktop</launchable>
  <name>Revolt</name>
  <developer id="chat.revolt">
    <name>Paul Makles</name>
  </developer>
  <summary>Revolt desktop app</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0</project_license>
  <icon type="remote" height="256" width="256">https://raw.githubusercontent.com/revoltchat/desktop/master/build/icons/icon.png</icon>
  <description>
    <p>Revolt is one of the best ways to stay connected with your friends and community without sacrificing any usability. We focus only on the user, and you can be sure that your conversations are confidential and your data is secure.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <caption>Main window</caption>
      <image>https://raw.githubusercontent.com/revoltchat/.github/master/screenshots/2022-03.png</image>
    </screenshot>
  </screenshots>
  <releases>
		<release date="2024-11-06" version="1.0.8">
			<description>
				<p>Changes:</p>
				<ul>
					<li>Bumped Electron to version 33</li>
				</ul>
			</description>
		</release>
		<release date="2022-09-03" version="1.0.6">
			<description>
				<p>Bug fixes:</p>
				<ul>
					<li>fix: wrong app icon</li>
					<li>fix: correctly restore from tray icon on second instance start</li>
					<li>fix: restart from tray icon</li>
				</ul>
			</description>
		</release>
    <release date="2022-05-23" version="1.0.5">
      <description>
        Bug fixes:
        <ul>
          <li>fix: use getConfig() instead of store.getConfig to prevent error on quit.</li>
          <li>feat: use monochrome tray icon and fix tray icon on macOS.</li>
        </ul>
      </description>
    </release>
    <release date="2022-05-10" version="1.0.4">
      <description>
        Small quality of life improvements and minor bug fixes:
        <ul>
          <li>prevent launching multiple instances.</li>
          <li>add a tray icon.</li>
          <li>allow minimising the app to the tray.</li>
          <li>allow zooming in with "CTRL + =".</li>
          <li>artifact like shapes on start.</li>
          <li>add spell check</li>
          <li>bundle window icon correctly</li>
          <li>generate DMG rather than ZIP</li>
        </ul>
      </description>
    </release>
    <release date="2022-03-04" version="1.0.3">
      <description>
        Bug fixes and clean up:
        <ul>
          <li>Automate CI for publishing new releases.</li>
          <li>Fix AppX icons</li>
          <li>Update Discord RPC</li>
          <li>Change default settings</li>
        </ul>
      </description>
    </release>
    <release date="2021-08-11" version="1.0.2">
      <description>
        Fixes auto-update
      </description>
    </release>
  </releases>
  <url type="bugtracker">https://github.com/revoltchat/desktop/issues</url>
  <url type="homepage">https://revolt.chat</url>
  <url type="donation">https://insrt.uk/donate</url>
  <url type="contact">https://support.revolt.chat/contact</url>
  <url type="faq">https://developers.revolt.chat/faq</url>
  <url type="translate">https://translate.revolt.chat/</url>
  <url type="contribute">https://developers.revolt.chat/contrib.html</url>
  <url type="vcs-browser">https://github.com/revoltchat/desktop.git</url>
  <update_contact>dusan.simic1810@gmail.com</update_contact>
  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-info">intense</content_attribute>
    <content_attribute id="social-audio">intense</content_attribute>
    <content_attribute id="social-contacts">intense</content_attribute>
  </content_rating>
</component>
