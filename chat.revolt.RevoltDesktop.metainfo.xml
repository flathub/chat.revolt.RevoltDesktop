<component type="desktop">
  <id>chat.revolt.RevoltDesktop</id>
  <provides>
    <id>chat.revolt.RevoltDesktop.desktop</id>
  </provides>
  <launchable type="desktop-id">chat.revolt.RevoltDesktop.desktop</launchable>
  <name>Revolt</name>
  <developer_name>Paul Makles</developer_name>
  <summary>Revolt desktop app</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0</project_license>
  <url type="homepage">https://revolt.chat</url>
  <icon type="remote" height="256" width="256">https://raw.githubusercontent.com/revoltchat/desktop/master/build/icons/icon.png</icon>
  <description>
    <p>User-first chat platform built with modern web technologies.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <caption>Main window</caption>
      <image>https://raw.githubusercontent.com/revoltchat/.github/master/screenshot.png</image>
    </screenshot>
  </screenshots>
  <releases>
    <release date="2022-05-10" version="1.0.4">
      <description>
        mall quality of life improvements and minor bug fixes:
        <ul>
          <li>prevent launching multiple instances.</li>
          <li>add a tray icon.</li>
          <li>allow minimising the app to the tray.</li>
          <li>allow zooming in with "CTRL + =".</li>
          <li>artifact like shapes on start.</li>
          <li>add spell check</li>
          <li>bundle window icon correctly</li>
          <li>generate DMG rather than ZIP</li>
        </ul>
      </description>
    </release>
    <release date="2022-03-04" version="1.0.3">
      <description>
        Bug fixes and clean up:
        <ul>
          <li>Automate CI for publishing new releases.</li>
          <li>Fix AppX icons</li>
          <li>Update Discord RPC</li>
          <li>Change default settings</li>
        </ul>
      </description>
    </release>
    <release date="2021-08-11" version="1.0.2">
      <description>
        Fixes auto-update
      </description>
    </release>
  </releases>
  <url type="bugtracker">https://github.com/revoltchat/desktop/issues</url>
  <url type="donation">https://insrt.uk/donate</url>
  <url type="help">https://github.com/revoltchat/desktop</url>
  <url type="translate">https://github.com/revoltchat/revite</url>
  <update_contact>dusan.simic1810@gmail.com</update_contact>
  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-info">intense</content_attribute>
    <content_attribute id="social-audio">intense</content_attribute>
    <content_attribute id="social-contacts">intense</content_attribute>
  </content_rating>
</component>
